<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<MessageImportance Condition="$(MessageImportance) == ''">High</MessageImportance>
		<!-- To set a more suitable name for xml-transformation, not only web-config transformation. The original value is "ProfileTransformWebConfig". -->
		<ProfileTransformWebConfigIntermediateOutput Condition="'$(ProfileTransformWebConfigIntermediateOutput)'==''">ProfileXmlTransformation</ProfileTransformWebConfigIntermediateOutput>
		<TransformOnBuild Condition="$(TransformOnBuild) == ''">True</TransformOnBuild>
		<!-- To set a more suitable name for xml-transformation, not only web-config transformation. The original value is "TransformWebConfig". -->
		<TransformWebConfigIntermediateOutput Condition="'$(TransformWebConfigIntermediateOutput)'==''">XmlTransformation</TransformWebConfigIntermediateOutput>
		<WebApplicationProjectTypeGuid Condition="$(WebApplicationProjectTypeGuid) == ''">349c5851-65df-11da-9384-00065b846f21</WebApplicationProjectTypeGuid>
		<XmlTransformationCommonBuildTransformName Condition="$(XmlTransformationCommonBuildTransformName) == ''">Build</XmlTransformationCommonBuildTransformName>
		<XmlTransformationCommonBuildTransformErrorMessage Condition="$(XmlTransformationCommonBuildTransformErrorMessage) == ''">The common-build transform file &quot;{0}&quot; does not exist.</XmlTransformationCommonBuildTransformErrorMessage>
		<XmlTransformationCommonPublishTransformName Condition="$(XmlTransformationCommonPublishTransformName) == ''">Publish</XmlTransformationCommonPublishTransformName>
		<XmlTransformationCommonPublishTransformErrorMessage Condition="$(XmlTransformationCommonPublishTransformErrorMessage) == ''">The common-publish transform file &quot;{0}&quot; does not exist.</XmlTransformationCommonPublishTransformErrorMessage>
		<XmlTransformationMapReferenceMessage Condition="$(XmlTransformationMapReferenceMessage) == ''">See the &quot;{0}&quot; metadata-property for the &quot;XmlTransformationMap&quot;-itemgroup with identity &quot;{1}&quot;.</XmlTransformationMapReferenceMessage>
		<XmlTransformationSourceName Condition="$(XmlTransformationSourceName) == ''">Template</XmlTransformationSourceName>
		<XmlTransformationSourceErrorMessage Condition="$(XmlTransformationSourceErrorMessage) == ''">The source file &quot;{0}&quot; does not exist.</XmlTransformationSourceErrorMessage>
		<!-- Error, Message or Warning -->
		<XmlTransformationValidationMode Condition="$(XmlTransformationValidationMode) == ''">Warning</XmlTransformationValidationMode>
		<XmlTransformationWebApplicationSourceErrorMessage Condition="$(XmlTransformationWebApplicationSourceErrorMessage) == ''">The source must be specified for xml-transformation to work on a webapplication-project. The source can not be the same as the destination.</XmlTransformationWebApplicationSourceErrorMessage>
	</PropertyGroup>
	<ItemGroup Condition="@(XmlFileExtension) == ''">
		<!-- Case-insensitive -->
		<XmlFileExtension Include=".config" />
		<XmlFileExtension Include=".resx" />
		<XmlFileExtension Include=".xml" />
	</ItemGroup>
	<ItemDefinitionGroup>
		<XmlTransformationMap>
			<CommonBuildTransform>%(RelativeDir)%(Filename).$(XmlTransformationCommonBuildTransformName)%(Extension)</CommonBuildTransform>
			<CommonPublishTransform>%(RelativeDir)%(Filename).$(XmlTransformationCommonPublishTransformName)%(Extension)</CommonPublishTransform>
			<!-- If the "Source" is not a project relative path it must be an absolute path. -->
			<Source>%(RelativeDir)%(Filename).$(XmlTransformationSourceName)%(Extension)</Source>
		</XmlTransformationMap>
	</ItemDefinitionGroup>
</Project>